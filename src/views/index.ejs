<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/material-icons@1.13.14/iconfont/material-icons.min.css">
    <title>School Control</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.min.js"
      integrity="sha384-G/EV+4j2dNv+tEPo3++6LCgdCROaejBqfUeNjuKAiuXbjrxilcCdDz6ZAVfHWe1Y"
      crossorigin="anonymous"
    ></script>
    
  </head>
  <body>
    <div class="container">
      <div class="row mb-2">
        <nav class="navbar navbar-expand-lg bg-body-tertiary" >
          <div class="container-fluid">
            <a class="navbar-brand" href="#">School Control</a>
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarNav"
              aria-controls="navbarNav"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="#"
                    >Home</a
                  >
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Features</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Pricing</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      </div>
      <div class="row">
        <div class="col-lg-5">
          <div class="card">
            <div class="card-body">
              <form action="/api/teachers/insertOne" method="post">
                <div class="row">
                  <div class="col-lg-6">
                    <label for="txtTeacherId" class="form-label"
                      >Número de Control</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="txtTeacherId"
                      name="teacher_id"
                    />
                  </div>
                  <div class="col-lg-6">
                    <label for="txtName" class="form-label">Nombre</label>
                    <input
                      type="text"
                      class="form-control"
                      id="txtName"
                      name="name"
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-6">
                    <label for="txtLastName" class="form-label">Apellidos</label>
                    <input
                      type="text"
                      class="form-control"
                      id="txtLastName"
                      name="lastname"
                    />
                  </div>
                  <div class="col-lg-6">
                    <label for="txtAge" class="form-label">Edad</label>
                    <input
                      type="text"
                      class="form-control"
                      id="txtAge"
                      name="age"
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-6">
                    <label for="txtEmail" class="form-label">Email</label>
                    <input
                      type="text"
                      class="form-control"
                      id="txtEmail"
                      name="email"
                    />
                  </div>
                  <div class="col-lg-6">
                    <label for="txtArea" class="form-label">Area</label>
                    <input
                      type="text"
                      class="form-control"
                      id="txtArea"
                      name="area"
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-6">
                    <label for="txtSalary" class="form-label">Salario</label>
                    <input
                      type="text"
                      class="form-control"
                      id="txtSalary"
                      name="salary"
                    />
                  </div>
                  <div class="col-lg-6">
                    <label for="txtYearsOfService" class="form-label">Años de servicio</label>
                    <input
                      type="text"
                      class="form-control"
                      id="txtYearsOfService"
                      name="years_of_service"
                    />
                  </div>
                </div>
                <div class="row">
                <div class="col-lg-3">
                  <button type="submit" class="btn btn-primary mt-3">
                    Guardar
                  </button>
                </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!--Aqui va la tabla-->
        <div class="col-lg-7">
          <h2>Maetros</h2>
          <table class="table table-primary table-striped" >
          <thead>
            <tr>
              <th># de control</th>
              <th>Nombre</th>
              <th>Apellidos</th>
              <th>Edad</th>
              <th>Email</th>
              <th>Area</th>
              <th>Salrio</th>
              <th>Años de srficio</th>
              <th colspan="2">Acciones</th>
            </tr>
          </thead>
          <tbody>  
            <% teachers.forEach(function(teacher) { %>
            <tr>
              <td><%= teacher.teacher_id %></td>
              <td><%= teacher.name %></td>
              <td><%= teacher.lastname %></td>
              <td><%= teacher.age %></td>
              <td><%= teacher.email %></td>
              <td><%= teacher.area %></td>
              <td><%= teacher.salary %></td>
              <td><%= teacher.years_of_service %></td>
              <td>
                <a href="/api/teachers/getOne/<%= teacher.teacher_id %>" class="btn btn-warning">
                  <i class="material-icons">
                 edit
                </i>
              </a>
              </td>
              <td>
                <a href="/api/teachers/deleteOne/<%= teacher.teacher_id %>" class="btn btn-danger">
                  <i class="material-icons">
                    delete
                  </i>
                </a>
              </td>
            
            </tr>
            <% }); %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </body>
</html>